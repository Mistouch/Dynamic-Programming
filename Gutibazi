vector<bool>isprime;
vector<int>primegula;
void sieve(ll n)
{
    isprime.assign(n+1,true);
    isprime[0]=isprime[1]=false;
    for(ll i=2; i*i<=n; i++)
    {
        if(!isprime[i])
            continue;
        for(int j=i*i; j<=n; j+=i)
            isprime[j]=false;

    }
    for(ll i=2; i<=n; i++)
    {
        if(isprime[i])
            primegula.pb(i);
    }
}
const int N=10;
const int dx[4]= {-1,0,1,0};
const int dy[4]= {0,1,0,-1};
vector<int>G[N];
vector<bool>vis(N);
int res=0;
int r,c;
int dp[N][N];
int way(int x,int y)
{
    if(x==r and y==c) return 1;
    if(dp[x][y]!=-1) return dp[x][y];

    int v=0;
    if(x+1<=r)
        v+=way(x+1,y);
    if(y+1<=c)
        v+=way(x,y+1);

    return dp[x][y]=v;
}
